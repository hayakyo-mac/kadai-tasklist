<%= form_for(message) do |f| %>
  <% if message.errors.any? %>
    <div id="error_explanation">
      <ul>
        <% message.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  
  <%= f.label :period, '予定日時' %>
  <%= f.text_field :period %>
  
  <%= f.label :title, "タスク" %>
  <%= f.text_field :title %>
  
  <%= f.label :content, "内容" %>
  <%= f.text_field :content %>
  
  <%= f.submit "投稿" %>

<% end %>